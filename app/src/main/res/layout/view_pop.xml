<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
    android:id="@+id/rv_pop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"/>
    <!--<com.tracyis.bililive.view.FlowLayout-->
        <!--android:id="@+id/fl_pop"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"/>-->
    <View
        android:background="@android:color/darker_gray"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tv_pop_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/selector_topic_pop_bg"
            android:text="全部"
            android:textColor="@drawable/bg_tv_pop"
            android:textIsSelectable="true"/>

        <TextView
            android:id="@+id/tv_pop_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/selector_topic_pop_bg"
            android:text="最新"
            android:textColor="@drawable/bg_tv_pop"
            android:textIsSelectable="true"/>

        <TextView
            android:id="@+id/tv_pop_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/selector_topic_pop_bg"
            android:text="最热"
            android:textColor="@drawable/bg_tv_pop"
            android:textIsSelectable="true"/>
    </LinearLayout>
</LinearLayout>